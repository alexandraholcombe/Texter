@{
    ViewBag.Title = "TEXTER";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Texter.Models.Message

<h2>Send a new message</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.To)
    @Html.TextBoxFor(model => model.To, new { @Value = "+12064653611" })
    @Html.LabelFor(model => model.From, new { @Value = "+12065391227" })
    @Html.TextBoxFor(model => model.From)
    @Html.LabelFor(model => model.Body)
    @Html.TextBoxFor(model => model.Body)
    <input type="submit" value="Send!" />
}

@Html.ActionLink("Back home", "Index")